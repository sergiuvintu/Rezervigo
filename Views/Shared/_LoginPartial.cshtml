@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Index", "Manage", null, Request.Url.Scheme)" title="Manage">Hello <i class="fas fa-fw fa-user-tag"></i> @User.Identity.GetUserName() !</a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fas fa-fw fa-sign-out-alt"></i>Log out</a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a href = "@Url.Action("Register", "Account", null, Request.Url.Scheme)" id="registerLink"><i class="fas fa-fw fa-user-plus"></i>Register</a></li>
    <li><a href="@Url.Action("Login", "Account", null, Request.Url.Scheme)" id="loginLink"><i class="fas fa-fw fa-sign-in-alt"></i>Sign in</a></li>
</ul>
}
