<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Rezervigo</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/fontawesome")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top menu-bar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Images/logo.png" alt="Logo" width="50px" />@Html.ActionLink("Rezervigo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @using Microsoft.AspNet.Identity
                    @if (Request.IsAuthenticated)
                    {
                        <li><a href="@Url.Action("Dashboard", "Home", null, Request.Url.Scheme)"><i class="fas fa-fw fa-tachometer-alt"></i>Dashboard</a></li>
                        <li><a href="@Url.Action("Index", "Users", null, Request.Url.Scheme)"><i class="fas fa-fw fa-users"></i>Users</a></li>
                        <li><a href="@Url.Action("Index", "Rooms", null, Request.Url.Scheme)"><i class="fas fa-fw fa-hotel"></i>Rooms</a></li>
                        <li><a href="@Url.Action("Index", "Reservations", null, Request.Url.Scheme)"><i class="fas fa-fw fa-calendar-alt"></i>Reservations</a></li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer class="navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - Rezervigo - an &trade;Octavic PTS Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
